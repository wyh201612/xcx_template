/* 没有购买商品 */

.no-goods-box {
}

.no-goods-box .no-goods-icon {
    width: 316rpx;
    height: 316rpx;
    margin: 134rpx auto 38rpx;
}

.no-goods-box .no-goods-icon image {
    width: 100%;
    height: 100%;
}

.no-goods-box .no-goods-title {
    text-align: center;
}

/* 购物车 */

.look {
    width: 118rpx;
    padding: 0;
    height: 42rpx;
    margin: 42rpx auto;
    font-size: 24rpx;
}

.look[class*="line"]::after {
    border-radius: 100rpx;
}

.footers {
    position: absolute;
    left: 50%;
    bottom: 68rpx;
    transform: translateX(-50%);
}

.mumu-icon {
    position: relative;
    width: 148rpx;
    height: 112rpx;
    margin: 0 auto 18rpx;
}

.mumu-icon image {
    width: 100%;
    height: 100%;
}

.store-cell {
    border-bottom: 1rpx solid #f1f1f1;
}

.car-goods-header {
    width: 100%;
    height: 86rpx;
    color: #595757;
    z-index: 9;
    position: relative;
}

.car-goods-header .car-goods-header-left {
}

.car-goods-header .car-goods-header-left .car-goods-home {
    width: 46rpx;
    height: 42rpx;
    vertical-align: middle;
    margin: 0 20rpx 0 42rpx;
}

.car-goods-header .car-goods-header-left text {
    font-size: 30rpx;
}

.car-goods-header .car-goods-header-right text {
    font-size: 30rpx;
    margin-right: 42rpx;
}

.car-goods {
    overflow: hidden;
}

.goods-item {
    margin: 16rpx;
}

.goods-item .store-cell:first-child {
    border-radius: 10rpx 10rpx 0 0;
}

.goods-item .store2-cell {
    border-radius: 0 0 10rpx 10rpx;
}

.car-goods .goods-list {
}

.car-goods .cus-iconRadio {
    height: 100%;
    vertical-align: middle;
}

.goods-list .goods-left {
    margin: 0 22rpx 0 30rpx;
}

.goods-list .goods-left image {
    width: 166rpx;
    height: 166rpx;
}

.goods-list .goods-right {
    max-width: 404rpx;
}

.goods-list .goods-right .goods-store, .goods-list .goods-right .goods-name,
.goods-list .goods-right .goods-explain {
    margin-bottom: 20rpx;
}

/* 提交按钮 */

.submit-bar {
    position: fixed;
    bottom: 84rpx;
    left: 0;
    width: 100%;
    -webkit-user-select: none;
    user-select: none;
    z-index: 100;
}

.submit-bar__bar {
    display: flex;
    align-items: center;
    height: 86rpx;
    font-size: 28rpx;
    background-color: #fff;
    padding: 0 22rpx 0 34rpx;
}

.submit-bar__bar .submit-bar-btn {
    height: 56rpx;
    padding: 0 26rpx;
}
